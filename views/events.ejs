<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <!-- Events Hero Section -->
    <section class="hero events-hero">
        <div class="hero-content">
            <h2>Upcoming Events</h2>
            <p>Join us in fellowship and celebration</p>
        </div>
    </section>

    <!-- Events List Section -->
    <section class="events-container">
        <div class="event-card">
            <div class="event-date">
                <span class="month">JAN</span>
                <span class="day">15</span>
            </div>
            <div class="event-details">
                <h3>Event Title</h3>
                <p class="event-time">7:00 PM - 9:00 PM</p>
                <p class="event-location">Main Sanctuary</p>
                <p class="event-description">Brief description of the event goes here. What to expect and any additional information.</p>
                <a href="#" class="btn">Learn More</a>
            </div>
        </div>
        <div class="event-card">
            <div class="event-date">
                <span class="month">DEC</span>
                <span class="day">15</span>
            </div>
            <div class="event-details">
                <h3>Business fair</h3>
                <p class="event-time">After the mass</p>
                <p class="event-location">Parish premises</p>
                <p class="event-description">A business fair to help the community and the parishioners familiarize themselves with the various businesses of their fellow parishioners</p>
                <a href="#" class="btn">Learn More</a>
            </div>
        </div>
        <div class="event-card">
            <div class="event-date">
                <span class="month">DEC</span>
                <span class="day">22</span>
            </div>
            <div class="event-details">
                <h3>Nine lessons and carols</h3>
                <p class="event-time">4:00 PM</p>
                <p class="event-location">Parish premises</p>
                <p class="event-description">An evening of carols and lessons to celebrate the birth of Jesus Christ as well as to solidify the bond between the parishioners and the church</p>
                <a href="#" class="btn">Learn More</a>
            </div>
        </div>
        <!-- Add more event-card divs as needed -->
    </section>

    <%- include('./partials/footer.ejs') %>
